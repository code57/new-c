#include <stdio.h>

int main()
{
	char a='y';
	printf("你会努力编程吗(y/n)?\n");
	scanf("%c", &a);
	if (a == 'y')
		printf("你会成功\n");
	else if (a == 'n')
		printf("你会失败\n");
	else
		printf("请输入正确的回答\n");
	return 0;
}
//尝试使用枚举变量
int main()//使用枚举变量作为if判断的主体 待验证

{
	enum a { y, n };
	printf("你会好好学习吗？\n");
	enum a answer = y;
	scanf("%c", &answer);
	if (answer == 'y')
		printf("成功\n");
	else if(answer == 'n')
		printf("失败\n");
	else
		printf("请输入正确回答\n");
	return 0;
}
